{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist", 
    "build",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts", 
    "**/*.spec.tsx",
    "__tests__/**/*"
  ]
}